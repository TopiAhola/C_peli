{
    "configurations": [

        {
            "name": "NUC C/C++: g++.exe build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,            
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\Ohjelmia\\MSYS2\\ucrt64\\bin\\gdb.exe", 
            "logging": {
                //"trace": true,
                //"traceResponse": true
                "engineLogging": true   //enginelogging displays WM_ windowmessages 
                        },           

            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Windows dll file association",
                    "text": "-LC:\\Windows\\System32 -lgdi32.lib -luser32.lib",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "NUC C/C++: g++.exe build active file"
        },
        
